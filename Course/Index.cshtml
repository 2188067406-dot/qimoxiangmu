@model IEnumerable<TeachingAI1.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Course List";
}

<h2>Available Courses</h2>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var course in Model)
        {
            <!-- 关键：用 course.Id 拼出图片名 -->
            var imageUrl = $"/images/course{course.Id}.jpg";

            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@imageUrl" 
                         class="card-img-top" 
                         alt="@course.Title" 
                         style="height: 150px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <p><small class="text-muted">Instructor: @course.Instructor</small></p>
                        <p><small class="text-muted">Duration: @course.Duration</small></p>
                        <a asp-controller="Student" asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No courses available.</p>
    }
</div>