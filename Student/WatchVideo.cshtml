@{
    ViewData["Title"] = "Watch Video - " + ViewBag.CourseTitle;
    Layout = "_StudentLayout";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center mb-4">
                <a href="@Url.Action("CourseDetails", "Student", new { id = ViewBag.CourseId })" 
                   class="btn btn-sm btn-outline-primary me-3">
                    <i class="fas fa-arrow-left me-2"></i>Back to Course
                </a>
                <h2>@ViewBag.CourseTitle</h2>
            </div>

            <!-- 视频播放器 -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <video controls playsinline preload="metadata" style="width: 100%; height: auto; background: #000;">
                        <source src="@ViewBag.VideoUrl" type="video/mp4">
                        Your browser does not support video playback.
                    </video>
                </div>
            </div>

            <!-- 视频控制下方操作 -->
            <div class="d-flex justify-content-between mt-3">
                <button class="btn btn-secondary" onclick="history.back()">
                    <i class="fas fa-chevron-left me-1"></i> Back
                </button>
                <a href="@Url.Action("MarkVideoComplete", "Student", new { courseId = ViewBag.CourseId })" 
                   class="btn btn-success">
                    Mark as Completed <i class="fas fa-check-circle ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        video {
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }
    </style>
}